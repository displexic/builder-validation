{
  "name": "builder-validation",
  "version": "0.0.3",
  "description": "A minimalist validation library for JavaScript.",
  "keywords": [
    "nodejs",
    "schema",
    "validation",
    "classes",
    "validate",
    "builders"
  ],
  "homepage": "https://github.com/slekup/builder-validation#readme",
  "bugs": {
    "url": "https://github.com/slekup/builder-validation/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slekup/builder-validation.git"
  },
  "license": "MIT",
  "author": "Slekup",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {},
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run lint:fix && pnpm run format && pnpm run build:nocheck",
    "build:nocheck": "rimraf dist && tsup",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" && tsc --noEmit",
    "lint:fix": "eslint --fix \"src/**/*.ts\" && tsc --noEmit",
    "prepare": "husky install"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "printWidth": 80,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.22.10",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.5.0",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsdoc": "^46.4.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint-prettier": "0.0.0-empty",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6"
  }
}
